@{
    /**/
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Plan.Models.MUser
@{
    User user = (User)Session["USER_SESSION"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Change Password</div>
        <div class="card-body">
            @{
                if (ViewBag.Messege == null)
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-success" })
                }
            }

            @if (ViewBag.Messege == null || ViewBag.Messege == "")
            {
                <div class="text-center mb-4">
                    <h4>Nhập mật khẩu mới!</h4>
                </div>
                <form action="/Account/ChangePassword" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <input type="password" ng-model="Password" name="password" class="form-control" placeholder="New Password" required="required" autofocus="autofocus">
                    </div>
                    <div class="form-group">
                        <input type="password" ng-model="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required="required" autofocus="autofocus">
                    </div>
                    <input hidden value="@user.ID" ng-model="ID" name="id" />
                    <input class="btn btn-primary btn-block" value="Đổi mật khẩu" type="submit" />
                </form>
            }
        </div>
    </div>
</div>

