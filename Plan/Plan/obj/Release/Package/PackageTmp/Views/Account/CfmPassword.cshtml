
@{
    ViewBag.Title = "CfmPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model User
@{ 
    User user = (User)Session["USER_SESSION"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Confirm Password</div>
        <div class="card-body">
            <div class="text-center mb-4">
                <h4>Nhập mật khẩu hiện tại!</h4>
            </div>
            <form action="/Account/CfmPassword" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new {@class="text-danger" })
                <div class="form-group">
                    <input type="password" ng-model="Password" name="password" class="form-control" placeholder="Password" required="required" autofocus="autofocus">
                </div>
                <input hidden value="@user.ID" ng-model="ID" name="id" />
                <input class="btn btn-primary btn-block" value="Tiếp theo" type="submit"/>
            </form>
        </div>
    </div>
</div>

