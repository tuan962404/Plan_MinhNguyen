                </div>
                <form action="/Account/ForgetPassword" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class="text-danger"})
                    <div class="form-group">
                        <input type="text" ng-model="User1" name="user1" id="" class="form-control" placeholder="Enter user name" required="required" autofocus="autofocus">
                        <br /> <input type="email" ng-model="Email" name="email" id="inputEmail" class="form-control" placeholder="Enter email address" required="required">
                    </div>
                    <input class="btn btn-primary btn-block" type="submit" value="Tiếp tục" />
                </form>
