@model DA_Injection
@{
    ViewBag.Title = "ViewEditKQSX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs
    <!-- DataTables Example -->

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Edit Production Result
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <form method="post" action="/Home/ViewEditKQSX">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="text-align:center">
                                <th>Date</th>
                                <th>Code</th>
                                <th>Số Máy</th>
                                <th>Plan(Day)</th>
                                <th>Good (Shift1)</th>
                                <th>Not Good (Shift1)</th>
                                <th>Plan(Night)</th>
                                <th>Good (Shift3)</th>
                                <th>Not Good (Shift3)</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr style="text-align:center">
                                <th>Date</th>
                                <th>Code</th>
                                <th>Số Máy</th>
                                <th>Plan(Day)</th>
                                <th>Good (Shift1)</th>
                                <th>Not Good (Shift1)</th>
                                <th>Plan(Night)</th>
                                <th>Good (Shift3)</th>
                                <th>Not Good (Shift3)</th>
                                <th>Edit</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (ViewBag.KQ != null)
                            {
                                DA_Injection x = ViewBag.KQ;

                                <tr style="text-align:center">
                                    <th style="background-color:lightskyblue">
                                        @{
                                            DateTime date = Convert.ToDateTime(x.Date);
                                            string shortDate = date.ToShortDateString();
                                        }
                                        @shortDate
                                        <input type="hidden" value="@date" ng-model="Date" name="date" />
                                    </th>
                                    <th style="background-color:lightskyblue">
                                        @x.Code
                                        <input type="hidden" value="@x.Code" ng-model="Code" name="code" />
                                    </th>
                                    <th style="background-color:lightskyblue">
                                        @x.So_May
                                        <input type="hidden" value="@x.So_May" ng-model="So_May" name="so_may" />
                                    </th>
                                    <th style="background-color:lightsalmon">
                                        @x.Plan_D_
                                    </th>
                                    <th>
                                        <input value="@x.Good_D_" class="form-control" ng-model="Good_D_" name="Good_D_" style="text-align:center"/>
                                    </th>
                                    <th>
                                        <input value="@x.NG_D_" class="form-control" ng-model="NG_D_" name="NG_D_" style="text-align:center"/>
                                    </th>
                                    <th style="background-color:darksalmon">@x.Plan_N_</th>
                                    <th>
                                        <input value="@x.Good_N_" class="form-control" ng-model="Good_N_" name="Good_N_" style="text-align:center"/>
                                    </th>
                                    <th>
                                        <input value="@x.NG_N_" class="form-control" ng-model="NG_N_" name="NG_N_" style="text-align:center"/>
                                    </th>
                                    <th>
                                        <input type="hidden" value="@ViewBag.Week" ng-model="Week" name="week" />
                                        <input type="submit" value="Cập Nhật" class="btn btn-success" />
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
        <div class="card-footer small text-muted"></div>
    </div>
    <p class="small text-center text-muted my-5">

    </p>
</div>

