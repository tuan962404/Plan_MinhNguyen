
@{
    ViewBag.Title = "UPDATE_MAILSERVER";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Plan.Models.MailSV
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header" style="text-align:center">Cập Nhật Email Server</div>
        <div class="card-body">
            <div class="text-center mb-4">
                <h4>Nhập Email Server Mới</h4>
            </div>
            <form action="/Account/UPDATE_MAILSERVER" method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                @{
                    if (ViewBag.Success == null)
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    }
                    else
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-success" })
                    }
                }
                <div class="form-group">
                    <input type="email" id="inputEmail" class="form-control" placeholder="Enter New Email" required="required" autofocus="autofocus" ng-model="Email" name="Email">
                    <br />
                    <input type="password" id="inputEmail" class="form-control" placeholder="Enter Email Password" required="required" autofocus="autofocus" ng-model="Password" name="Password">
                    <br />
                    <input type="password" id="inputEmail" class="form-control" placeholder="Confirm Email Password" required="required" autofocus="autofocus" ng-model="CfmPassword" name="CfmPassword">
                </div>
                <input type="submit" class="btn btn-primary btn-block" value="Cập nhật" />
            </form>
        </div>
    </div>
</div>

